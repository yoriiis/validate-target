{
	"compilerOptions": {
		"strict": true,
		"module": "nodenext",
		"moduleResolution": "node16",
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"outDir": "./lib",
		"declaration": true,
		"declarationDir": "types",
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": "./src"
	},
	"include": ["./src/**/*.ts"]
}
