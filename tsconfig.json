{
	"compilerOptions": {
		"outDir": "./lib",
		"allowJs": true,
		"checkJs": false,
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "types",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"module": "NodeNext",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*.ts"]
}
